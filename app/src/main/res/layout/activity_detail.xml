<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.jzarsuelo.android.inventory.mvp.detail.DetailActivity">

    <TextView
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:textSize="30sp"
        android:textColor="@color/textColorPrimary"
        tools:text="Chair"/>

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/name_text"
        android:textSize="18sp"
        tools:text="Price: $12.00"/>

    <TextView
        android:id="@+id/quantity_text"
        android:layout_below="@id/name_text"
        android:layout_alignEnd="@id/price_text"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Qty: 35"/>

    <TextView
        android:id="@+id/sales_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity_text"
        android:layout_marginTop="4dp"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        tools:text="Sales: 48"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/sales_text"
        android:background="@color/colorPrimaryLight"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/transaction_qty_text"
        android:layout_below="@id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction quantity:"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/transaction_qty_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_toRightOf="@id/transaction_qty_text"
        android:inputType="number"
        android:lines="1"
        android:maxLength="3"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:text="1"/>

    <RadioGroup
                android:id="@+id/transactions_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transaction_qty_edit">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction: "
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/sale_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_toStartOf="@+id/save_button"
            android:checked="true"
            android:textSize="18sp"
            android:text="Sale"/>

        <RadioButton
            android:id="@+id/restock_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_toStartOf="@+id/save_button"
            android:textSize="18sp"
            android:text="Restock"/>
    </RadioGroup>
    
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/save"
        android:textSize="18sp"
        android:enabled="false"/>

</RelativeLayout>
